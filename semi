
CREATE TABLE tipos_pago (
    id INT(5) UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY,
    tipo VARCHAR(100) NOT NULL UNIQUE
);

CREATE TABLE estado_pago(
id INT( 5 ) UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY ,
estado BIT( 1 ) NOT NULL DEFAULT 1
)

CREATE TABLE datos_pago(
id INT( 5 ) UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY ,
estado_id int(5) UNSIGNED NOT NULL, FOREIGN KEY (estado_id) REFERENCES estado_pago(id) ON UPDATE CASCADE ON DELETE RESTRICT,
ife VARCHAR(32) NOT NULL,
alias VARCHAR(32) NOT NULL,
tipo_pago_id int (5) UNSIGNED NOT NULL, FOREIGN KEY (tipo_pago_id) REFERENCES tipos_pago(id) ON UPDATE CASCADE ON DELETE RESTRICT,
importe FLOAT NOT NULL,
banco VARCHAR(64),
clabe BIGINT(20),
beneficiario VARCHAR(128) NOT NULL,
id_cliente int(8) unsigned NOT NULL, FOREIGN KEY (id_cliente) REFERENCES clientes(id_cliente) ON UPDATE CASCADE ON DELETE RESTRICT
)